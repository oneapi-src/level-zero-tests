    ctor_map = { ZE_STRUCTURE_TYPE_DRIVER_PROPERTIES : ze_driver_properties_t,
                 ZE_STRUCTURE_TYPE_DRIVER_IPC_PROPERTIES : ze_driver_ipc_properties_t,
